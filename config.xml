<?xml version="1.0" encoding="UTF-8"?>
<widget xmlns		= "http://www.w3.org/ns/widgets"
	xmlns:gap	= "http://phonegap.com/ns/1.0"
	id		= "uk.ac.cardiff.mobile"
	version 	= "0.0.5">

	<name>Cardiff University</name>

	<description>
		Cardiff University mobile application.
	</description>

	<author href="http://www.cardiff.ac.uk"
		email="insrvConnect@cardiff.ac.uk">
		insrvConnect
	</author>

	<gap:platforms>
		<gap:platform name="android" minVersion="2.1" />
		<gap:platform name="webos" />
		<gap:platform name="blackberry" project="widgets"/>
	</gap:platforms>

	<icon src="icon.png" gap:role="default" />

<!-- Note that if no <feature> elements are selected then the resulting app
	will require *all* permissions on Android.
-->
	<feature name="http://api.phonegap.com/1.0/geolocation"/>
	<feature name="http://api.phonegap.com/1.0/network"/>
	<feature name="http://api.phonegap.com/1.0/contacts"/>

	<!-- sample preference specification -->
	<preference name="autorotate" value="false" readonly="true"/>
</widget>